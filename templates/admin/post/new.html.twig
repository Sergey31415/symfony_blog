{% extends 'base.html.twig' %}

{% block title %}Post create {% endblock %}

{% block body %}
  {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.content) }}
    {{ form_row(form.image) }}
    {{ form_row(form.date) }}
    {{ form_row(form.views) }}
    {{ form_row(form.category) }}
    {{ form_row(form.user) }}

    <button type="submit" class="btn btn-primary">Add post</button>
  {{ form_end(form) }}
{% endblock %}